{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "MEN",
        "WOMEN",
        "ACADEMY",
        "FEATURE",
        "INTERNATIONAL",
        "UPDATE",
        "DEVELOPMENT",
        "ANNOUNCEMENT"
      ],
      "default": "MEN",
      "required": true
    },
    "headline": {
      "type": "boolean",
      "required": true
    },
    "video": {
      "type": "string"
    },
    "article_image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    }
  }
}
